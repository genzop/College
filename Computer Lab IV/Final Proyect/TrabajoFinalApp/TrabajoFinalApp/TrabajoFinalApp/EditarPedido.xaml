<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrabajoFinalApp.EditarPedido">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10" BackgroundColor="#0d2625">

                <Label x:Name="lblTitulo" FontSize="25" FontAttributes="Bold" TextColor="White" HorizontalOptions="CenterAndExpand" Margin="0, 10, 0, 10"/>

                <Frame Padding="30" HorizontalOptions="FillAndExpand">
                    <StackLayout>

                        <!-- Pedido -->

                        <StackLayout Spacing="0">
                            <Label Text="Numero" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Margin="5, 0, 0, 0"/>
                            <Entry x:Name="txtNumero" FontSize="17" HorizontalOptions="FillAndExpand"/>
                        </StackLayout>

                        <StackLayout Spacing="0">
                            <Label Text="Cliente" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Margin="5, 0, 0, 0"/>
                            <Picker x:Name="pickerCliente" HorizontalOptions="FillAndExpand" >
                                <Picker.Items>
                                    <x:String>Enzo Panettieri</x:String>
                                    <x:String>Sarah Mangiavacchi</x:String>
                                </Picker.Items>
                            </Picker>
                        </StackLayout>

                        <StackLayout Spacing="0">
                            <Label Text="Estado" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Margin="5, 0, 0, 0"/>
                            <Picker x:Name="pickerEstado" HorizontalOptions="FillAndExpand" >
                                <Picker.Items>
                                    <x:String>Enviado</x:String>
                                    <x:String>Entregado</x:String>
                                </Picker.Items>
                            </Picker>
                        </StackLayout>

                        <StackLayout Spacing="0">
                            <Label Text="Fecha" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Margin="5, 0, 0, 0"/>
                            <DatePicker x:Name="dateFechaPedido" Format="dd-MM-yyyy"></DatePicker>
                        </StackLayout>

                    </StackLayout>
                </Frame>


                <!-- Domicilio -->

                <Label x:Name="lblDomicilio" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" Margin="0, 10, 0, 10"/>

                <Frame Padding="30" HorizontalOptions="FillAndExpand">
                    <StackLayout>

                        <StackLayout Spacing="0">
                            <Label Text="Calle" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Margin="5, 0, 0, 0"/>
                            <Entry x:Name="txtCalle" FontSize="17"/>
                        </StackLayout>
                        
                        <StackLayout Spacing="0">
                            <Label Text="Numero" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Margin="5, 0, 0, 0"/>
                            <Entry x:Name="txtCalleNumero" FontSize="17"/>
                        </StackLayout>
                        
                        <StackLayout Spacing="0">
                            <Label Text="Localidad" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Margin="5, 0, 0, 0"/>
                            <Picker x:Name="pickerLocalidad" Title="Localidad" HorizontalOptions="FillAndExpand" >
                                <Picker.Items>
                                    <x:String>Guaymallen</x:String>
                                    <x:String>Capital</x:String>
                                </Picker.Items>
                            </Picker>
                        </StackLayout>
                        
                        <StackLayout Spacing="0">
                            <Label Text="Latitud" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Margin="5, 0, 0, 0"/>
                            <Entry x:Name="txtLatitud" FontSize="17"/>
                        </StackLayout>
                        
                        <StackLayout Spacing="0">
                            <Label Text="Longitud" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Margin="5, 0, 0, 0"/>
                            <Entry x:Name="txtLongitud" FontSize="17"/>
                        </StackLayout>

                        
                        <!-- Detalles -->                        
                        <ListView x:Name="listDetalles"></ListView>


                        <!-- Totales -->
                        <StackLayout Spacing="0">
                            <Label Text="SubTotal" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Margin="5, 0, 0, 0"/>
                            <Label x:Name="lblSubTotal" FontSize="17" Text="25"/>
                        </StackLayout>

                        <StackLayout Spacing="0">
                            <Label Text="Gastos de Envio" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Margin="5, 0, 0, 0"/>
                            <Entry x:Name="txtGastosEnvio" FontSize="17" Placeholder="Gastos de envio"/>
                        </StackLayout>
                        <StackLayout Spacing="0">
                            <Label Text="Total" FontSize="14" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" Margin="5, 0, 0, 0"/>
                            <Label x:Name="lblTotal" FontSize="17" Text="40"/>
                        </StackLayout>

                    </StackLayout>                    
                </Frame>
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>